{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "78.0"
    }
  },
  "name": "mozlz4-edit",
  "description": "mozlz4-edit",
  "short_name": "mozlz4-edit",
  "author": "serj-kzv",
  "version": "1",
  "homepage_url": "https://github.com/serj-kzv/mozlz4-edit",
  "browser_action": {
    "browser_style": false,
    "default_icon": "favicon.ico",
    "default_title": "mozlz4-edit"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "alarms",
    "bookmarks",
    "browserSettings",
    "browsingData",
    "captivePortal",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "contextualIdentities",
    "cookies",
    "dns",
    "downloads",
    "downloads.open",
    "find",
    "geolocation",
    "history",
    "identity",
    "idle",
    "management",
    "menus",
    "nativeMessaging",
    "notifications",
    "pkcs11",
    "privacy",
    "proxy",
    "search",
    "sessions",
    "storage",
    "tabHide",
    "tabs",
    "theme",
    "topSites",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
