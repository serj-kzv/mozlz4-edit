{
  "manifest_version": 2,
  "name": "ext-app",
  "description": "ext-app",
  "short_name": "ext-app",
  "author": "serj-kzv",
  "version": "1",
  "homepage_url": "https://github.com/serj-kzv/ext-app",
  "browser_action": {
    "default_icon": "ba-app/favicon.ico",
    "browser_style": false,
    "default_title": "ext-app"
  },
  "sidebar_action": {
    "browser_style": false,
    "default_icon": "sb-app/favicon.ico",
    "default_title": "ext-app",
    "default_panel": "/sb-app/index.html"
  },
  "options_ui": {
    "page": "/op-app/index.html",
    "browser_style": false,
    "open_in_tab": false
  },
  "page_action": {
    "browser_style": false,
    "default_icon": "pa-app/favicon.ico",
    "default_title": "pa-app",
    "default_popup": "/pa-app/index.html",
    "show_matches": [
      "<all_urls>"
    ]
  },
  "devtools_page": "dp-app/index.html",
  "background": {
    "persistent": true,
    "page": "/bg-app/index.html"
  },
  "content_scripts": [
    {
      "js": [
        "/co-app/runtime.js",
        "/co-app/main.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "chrome_url_overrides": {
    "newtab": "/nt-app/index.html"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "alarms",
    "bookmarks",
    "browserSettings",
    "browsingData",
    "captivePortal",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "contextualIdentities",
    "cookies",
    "dns",
    "downloads",
    "downloads.open",
    "find",
    "geolocation",
    "history",
    "identity",
    "idle",
    "management",
    "menus",
    "nativeMessaging",
    "notifications",
    "pkcs11",
    "privacy",
    "proxy",
    "search",
    "sessions",
    "storage",
    "tabHide",
    "tabs",
    "theme",
    "topSites",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
